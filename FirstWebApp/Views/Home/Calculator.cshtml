@{
    ViewData["Title"] = "Tutoring Calculator";
}

<h2>Landscape Photography Tutoring Calculator</h2>

<div>
    <label for="hours">Enter the number of hours you need:</label>
    <input type="number" id="hours" min="1" required>
    <span id="error-message" style="color: red; display: none;">Please enter a positive number.</span>
</div>

<div>
    <label for="rate">Rate per Hour:</label>
    <input type="text" id="rate" value="20" readonly>
</div>

<div>
    <button id="calculate">Calculate Total</button>
</div>

<div>
    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

<!-- Link to your JavaScript file -->
<script src="~/js/calculator.js"></script>